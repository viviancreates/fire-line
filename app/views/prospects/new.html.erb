<section class="prospect-form">
  <h2>Stay Updated</h2>
  <p>Sign up to receive updates and early access to FireLine.</p>
  
  <%= form_with model: @prospect, url: prospects_path, method: :post do |f| %>
    <div>
      <%= f.label :name, "Full Name" %>
      <%= f.text_field :name, required: true %>
    </div>

    <div>
      <%= f.label :email, "Email Address" %>
      <%= f.email_field :email, required: true %>
    </div>

    <div>
      <%= f.label :phone, "Phone Number (Optional)" %>
      <%= f.telephone_field :phone %>
    </div>

    <div>
      <%= f.label :interest, "Why are you interested in FireLine?" %>
      <%= f.select :interest, ["Tracking my health", "Advocating for farmworkers", "Medical research", "Other"], { include_blank: "Select a reason" } %>
    </div>

    <%= f.submit "Keep Me Updated!", class: "cta-button" %>
  <% end %>
</section>
