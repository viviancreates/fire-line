<body class="landing-page">
  <!-- Language Toggle -->
  <div class="language-toggle">
    <%= link_to "English", url_for(locale: :en), class: "lang-button" %>
    <%= link_to "EspaÃ±ol", url_for(locale: :es), class: "lang-button" %>
  </div>

  <header class="hero">
    <div class="hero-content">
      <h1 class="fireline-logo">
        <span class="f">F</span>
        <span class="i">I</span>
        <span class="r">R</span>
        <span class="e">E</span>
        <span class="l">L</span>
        <span class="i2">I</span>
        <span class="n">N</span>
        <span class="e2">E</span>
      </h1>
      <h2><%= auto_translate('header.tagline') %></h2>
      <p class="description"><%= auto_translate('header.description') %></p>

      <%= link_to auto_translate('cta.stay_updated'), new_prospect_path, class: "cta-button" %>

      <% if user_signed_in? %>
        <%= link_to auto_translate('cta.dashboard'), dashboard_path, class: "cta-button" %>
      <% else %>
        <%= link_to auto_translate('cta.get_started'), new_user_registration_path, class: "cta-button hidden" %>
      <% end %>
    </div>
  </header>

  <section class="works" id="how-it-works">
    <h2><%= auto_translate('sections.how_it_works') %></h2>
    <div class="steps">
      <div class="step">
        <h3><%= auto_translate('steps.create_account') %></h3>
        <p><%= auto_translate('steps.create_account_desc') %></p>
      </div>
      <div class="step">
        <h3><%= auto_translate('steps.log_health_data') %></h3>
        <p><%= auto_translate('steps.log_health_data_desc') %></p>
      </div>
      <div class="step">
        <h3><%= auto_translate('steps.generate_reports') %></h3>
        <p><%= auto_translate('steps.generate_reports_desc') %></p>
      </div>
      <div class="step">
        <h3><%= auto_translate('steps.stay_informed') %></h3>
        <p><%= auto_translate('steps.stay_informed_desc') %></p>
      </div>
      <div class="step">
        <h3><%= auto_translate('steps.take_action') %></h3>
        <p><%= auto_translate('steps.take_action_desc') %></p>
      </div>
    </div>
  </section>

  <section class="faq">
  <h2 class="text-center"><%= auto_translate('faq.title') %></h2>
  <div class="accordion" id="faqAccordion">
    <% (1..6).each do |n| %>
      <div class="accordion-item">
        <h3 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= n %>">
            <%= auto_translate("faq.question#{n}") %>
          </button>
        </h3>
        <div id="collapse<%= n %>" class="accordion-collapse collapse">
          <div class="accordion-body">
            <%= auto_translate("faq.answer#{n}") %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
  
  <footer>
    <nav>
      <ul class="footer-links">
        <li><a href="mailto:viviandavilacodes@gmail.com"><%= auto_translate('contact') %></a></li>
        <li><a href="https://dev.to/viviancreates"><%= auto_translate('blog') %></a></li>
      </ul>
    </nav>
  </footer>
</body>
